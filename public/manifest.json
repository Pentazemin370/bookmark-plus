{
  "manifest_version": 2,

  "name": "BookmarkPlus",
  "description": "Take your bookmarks to the next level, and never forget anything you learned!",
  "version": "0.0.1",
  "browser_action" : {
    "default_icon" : "logo192.png"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "content_scripts":[{
    "matches":["<all_urls>"],
    "js":["contentScript.js"],
    "match_about_blank":true
  }
],
  "web_accessible_resources": ["index.html"],
  
  "background": {
    "scripts":["runtimeHandler.js"],
    "persistent":false
  },
  "permissions": [
    "bookmarks","tabs"
  ]
}