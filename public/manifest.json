{
  "manifest_version": 3,
  "name": "Bookmark+ Beta",
  "description": "A modern, customizable, and feature rich bookmark sidebar",
  "version": "0.0.1",
  "action": {
    "default_icon": {
      "16": "temp_logo.png",
      "24": "temp_logo.png",
      "32": "temp_logo.png"
    }
  },
  "commands": {
    "toggle-menu": {
      "suggested_key": {
        "default": "Ctrl+Space",
        "mac": "Ctrl+Space"
      },
      "description": "Toggle Command"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ],
      "match_about_blank": true
    }
  ],
  "background": {
    "service_worker": "sw.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "landing.html",
        "toggle-button.html",
        "mouse.svg"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "bookmarks",
    "history",
    "storage",
    "tabs",
    "activeTab"
  ]
}